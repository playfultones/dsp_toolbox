---
# DSP Toolbox Clang-Tidy Configuration
# Cross-platform real-time audio DSP (C++23, header-only, xsimd)

Checks: >
  -*,
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  -bugprone-narrowing-conversions,
  cert-*,
  -cert-err58-cpp,
  clang-analyzer-*,
  -clang-analyzer-security.insecureAPI.rand,
  concurrency-*,
  -concurrency-mt-unsafe,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-c-arrays,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-avoid-non-const-global-variables,
  -cppcoreguidelines-bounds-array-to-pointer-decay,
  -cppcoreguidelines-bounds-constant-array-index,
  -cppcoreguidelines-bounds-pointer-arithmetic,
  -cppcoreguidelines-macro-usage,
  -cppcoreguidelines-non-private-member-variables-in-classes,
  -cppcoreguidelines-owning-memory,
  -cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  -cppcoreguidelines-pro-bounds-constant-array-index,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-type-const-cast,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-pro-type-union-access,
  -cppcoreguidelines-special-member-functions,
  misc-*,
  -misc-non-private-member-variables-in-classes,
  modernize-*,
  -modernize-avoid-c-arrays,
  -modernize-use-trailing-return-type,
  performance-*,
  portability-*,
  -portability-simd-intrinsics,
  readability-*,
  -readability-avoid-const-params-in-decls,
  -readability-else-after-return,
  -readability-function-cognitive-complexity,
  -readability-function-size,
  -readability-identifier-length,
  -readability-implicit-bool-conversion,
  -readability-isolate-declaration,
  -readability-magic-numbers,
  -readability-named-parameter,
  -readability-uppercase-literal-suffix

WarningsAsErrors: >
  bugprone-exception-escape,
  bugprone-use-after-move,
  cppcoreguidelines-no-malloc,
  cppcoreguidelines-no-new-delete,
  cppcoreguidelines-pro-type-vararg,
  cppcoreguidelines-slicing,
  misc-throw-by-value-catch-by-reference,
  performance-move-const-arg,
  performance-unnecessary-copy-initialization

CheckOptions:
  # Performance optimizations - xsimd batch types are small and passed by value
  - key: performance-unnecessary-value-param.AllowedTypes
    value: "xsimd::batch;xsimd::batch_bool"

  # SIMD handled by xsimd abstraction library
  - key: portability-simd-intrinsics.Suggest
    value: false

  # Real-time safety
  - key: bugprone-assert-side-effect.AssertMacros
    value: "assert;DSP_ASSERT"

  - key: bugprone-signal-handler.AsyncSafeFunctionSet
    value: "POSIX"

  # Modern C++ settings
  - key: modernize-use-nullptr.NullMacros
    value: "NULL"

  - key: modernize-use-override.IgnoreDestructors
    value: true

  - key: modernize-loop-convert.MinConfidence
    value: "reasonable"

  - key: modernize-pass-by-value.IncludeStyle
    value: "llvm"

  # Allow template metaprogramming patterns
  - key: readability-function-size.LineThreshold
    value: "100"

  - key: readability-function-size.StatementThreshold
    value: "100"

  - key: readability-function-size.BranchThreshold
    value: "20"

  - key: readability-function-size.ParameterThreshold
    value: "8"

  - key: readability-function-size.NestingThreshold
    value: "4"

  # Naming conventions per CODING_STANDARDS.md
  - key: readability-identifier-naming.NamespaceCase
    value: "CamelCase"

  - key: readability-identifier-naming.ClassCase
    value: "CamelCase"

  - key: readability-identifier-naming.StructCase
    value: "CamelCase"

  - key: readability-identifier-naming.TemplateParameterCase
    value: "CamelCase"

  - key: readability-identifier-naming.FunctionCase
    value: "camelBack"

  - key: readability-identifier-naming.MethodCase
    value: "camelBack"

  - key: readability-identifier-naming.VariableCase
    value: "camelBack"

  - key: readability-identifier-naming.ClassMemberCase
    value: "camelBack"

  - key: readability-identifier-naming.ClassMemberPrefix
    value: "m_"

  - key: readability-identifier-naming.PrivateMemberPrefix
    value: "m_"

  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: "m_"

  - key: readability-identifier-naming.EnumConstantCase
    value: "CamelCase"

  - key: readability-identifier-naming.EnumConstantPrefix
    value: "k"

  - key: readability-identifier-naming.ConstexprVariableCase
    value: "camelBack"

  - key: readability-identifier-naming.GlobalConstantCase
    value: "camelBack"

  - key: readability-identifier-naming.StaticConstantCase
    value: "camelBack"

  # Allow performance-critical patterns
  - key: cppcoreguidelines-pro-bounds-constant-array-index.GslHeader
    value: ""

  - key: cppcoreguidelines-pro-bounds-constant-array-index.IncludeStyle
    value: "llvm"

  # Allow C arrays for fixed-size audio buffers
  - key: modernize-avoid-c-arrays.AllowStringArrays
    value: true

  # Performance-critical const correctness
  - key: performance-unnecessary-value-param.IncludeStyle
    value: "llvm"

  - key: performance-move-const-arg.CheckTriviallyCopyableMove
    value: false

  # Allow magic numbers in DSP algorithms
  - key: readability-magic-numbers.IgnoredIntegerValues
    value: "0;1;2;3;4;8;16;32;64;128;256;512;1024;44100;48000;96000;192000"

  - key: readability-magic-numbers.IgnoredFloatingPointValues
    value: "0.0;0.5;1.0;2.0;-1.0;0.25;0.125;0.0625;3.14159265358979323846"

HeaderFilterRegex: '.*\.(h|hpp)$'

ExcludeHeaderFilterRegex: "(test|third_party|build|external)/.*"

FormatStyle: "file"

User: dsp-toolbox
